{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "init-functions": "firebase functions:config:get > .runtimeconfig.json",
    "serve": "npm run init-functions && npm run build && firebase emulators:start --only functions",
    "dev": "nodemon --watch src -e ts,js --exec npm run serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "firebase:target": "firebase functions:config:get --project bms-software",
    "firebase:deploy": "firebase deploy --token=${{ secrets.FIREBASE_TOKEN }} --only functions --project bms-software",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
