{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "init-functions": "firebase functions:config:get > .runtimeconfig.json --project bms-software",
    "serve": "npm run init-functions && npm run build && firebase emulators:start --only functions --project bms-software",
    "dev": "nodemon --watch src -e ts,js --exec npm run serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.3",
    "@types/express-fileupload": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^2.0.7",
    "typescript": "^3.8.0"
  },
  "private": true
}
